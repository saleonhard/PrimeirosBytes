algoritmo "Quatrooperacoes"

var
n1,n2,sm,sb,dv,mp: real
inicio
 escreva("Digite o primeiro número: ")
 leia(n1)
 escreval("Digite o segundo número: ")
 leia(n2)
 sm:=n1+n2
 escreval("Soma de ",n1, "e",n2," é: ",sm)
 sb:=n1-n2
 escreval("Subtração: ",sb)
 mp:=n1*n2
 escreval("Multiplicação: ",mp)
 dv:=n1/n2
 escreva("Divisão: ",dv)
fimalgoritmo
